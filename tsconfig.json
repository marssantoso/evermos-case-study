{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "faker/*": ["@faker-js/faker/*"],
      "faker": ["@faker-js/faker"]
    },
    "types": ["@nuxt/types", "@nuxtjs/axios", "@types/node", "jest"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
